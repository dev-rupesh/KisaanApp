<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rsoni.Activity.ProfileActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/profile_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_form"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fillViewport="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_user_profile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name of company"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:textColor="#fff"
                        android:background="#9BCD9B"
                        android:textStyle="bold"
                        android:id="@+id/tv_name_of_company" />
                    <!--android:drawableLeft="@drawable/ic_store_mall_directory_black_24dp"
                        android:drawablePadding="10dp"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_color"
                            android:text="Name : " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_name_of_proprietor" />
                        <!--android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                            android:gravity="center"
                            android:drawablePadding="10dp"-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_color"
                            android:text="Business Type : " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:drawableLeft="@drawable/ic_trending_up_black_24dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="20dp"
                            android:lineSpacingExtra="3sp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_business" />
                        <!--
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:gravity="center"
                            android:drawablePadding="10dp"-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_color"
                            android:text="Address : " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_address" />
                        <!--
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:gravity="center"
                            android:drawablePadding="10dp"-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_district" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_pincode" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_color"
                            android:text="Contact : " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:drawableLeft="@drawable/ic_call_black_24dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_mobile" />
                        <!--
                            android:drawableLeft="@drawable/ic_call_black_24dp"
                            android:gravity="center"
                            android:drawablePadding="10dp"-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_color"
                            android:text="Email : " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_email" />
                        <!--
                            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                            android:gravity="center"
                            android:drawablePadding="10dp"-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_text_color"
                            android:text="Mandi : " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:drawableLeft="@drawable/ic_local_grocery_store_black_24dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/profile_text_color"
                            android:id="@+id/tv_market" />
                        <!--
                            android:drawableLeft="@drawable/ic_local_grocery_store_black_24dp"
                            android:gravity="center"
                            android:drawablePadding="10dp"-->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>

</RelativeLayout>
